  <body>
    <%- include('./partials/header.ejs'); %>
    
    <div class = "card-wrapper">
      <div class = "card">
        <!-- card left -->
        <div class = "product-imgs">
          <div class = "img-display">
            <div class = "img-showcase">
              <img src = "<%= product.imagenPrincipal %> " alt = "celular image">
              <img src = "<%= product.imagenShowcase2 %>" alt = "celular image">
              <img src = "<%= product.imagenShowcase3 %>" alt = "celular image">
            </div>
          </div>
          <div class = "img-select">
            <div class = "img-item">
              <a href = "#" data-id = "1">
                <img src = "<%= product.imagenPrincipal %>" alt = "celular image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "#" data-id = "2">
                <img src = "<%= product.imagenShowcase2 %>" alt = "celular image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "#" data-id = "3">
                <img src = "<%= product.imagenShowcase3 %>" alt = "celular image">
              </a>
            </div>
          </div>
        </div>
        <!-- card right -->
        <div class = "product-content">
          
            <p class = "product-title"><%= product.descripcion %> </p>
          
          <a href = "/" class = "product-link">Volver a lista de productos</a>
          <div class = "product-rating">
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star"></i>
            <i class = "fas fa-star-half-alt"></i>
            <span>4.8(210)</span>
          </div>

          <div class = "product-price">
            <p class = "last-price">Precio original: <span>$565.000,00</span></p>
            <p class = "new-price">Precio nuevo: <span>$<%= product.precio %>  (50% OFF)</span></p>
          </div>

          <div class = "product-detail">
            <h2>Sobre este producto: </h2>
            <p> <%= product.detalle %> </p>
            <p></p>
            <ul>
              <li>Color: <span><%= product.colores %> </span></li>
              <li>disponibilidad: <span><%= product.disponibilidad %> </span></li>
              <li>Categoria:<span><%= product.categoria %> </span></li>
              <li>Disponible solo para: <span><%= product.ubicacionesDisponible %> </span></li>
            </ul>
          </div>

          <div class = "purchase-info">
            <input type = "number" min = "0" value = "1">
            <button type = "button" class = "btn">
              Agregar al carrito <i class = "fas fa-shopping-cart"></i>
            </button>
          </div>

          <% if (logged != undefined && logged.admin == true) { %>
            <div class = "edit-button">
              <button type = "button" class = "button-edit">
                <a href="/products/<%= product.id %>/edit ">
                  Editar Producto 
                </a>
              </button>
              <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                <button type = "submit" class = "button-delete">
                  Borrar Producto 
                </button>
              </form>
            </div>
          <% } %>
          



        </div>
      </div>
    </div>

    
    <script src="../js/productos-script.js"></script>
  </body>
</html>