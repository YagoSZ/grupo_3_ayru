<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs'); %>

<body>
    <%- include('./partials/header.ejs'); %>
    <main>
        <div>
            <p class="titular"><i class="fa-solid fa-cart-shopping"></i><strong>CARRITO DE COMPRA</strong></p>
        </div>
        <div class="main-main">
            <div class="sub-main">
                <article class="contenedor-main">
                    <div class="contenedor-tarjetas">
        
                        <!-- primer Tarjeta del carrito -->
                        <article class="card">
                            <img class=productos src="/img/camiseta.jpg" alt="Camiseta">
                            <div class="descripcion-producto">
                                <div>
                                    <h2 class="titulo-tarjeta">Titulo del producto</h2>
                                    <h3 class="subtitulo-tarjeta">descripcion del producto</h3>
                                </div>
                                <div class="etiqueta-precio">
                                    <div>
                                        <p>$Precio x</p>
                                    </div>
                                    <select name="cantidad-producto" id="cantProd">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                    <div>
                                        <p>= $Total</p>
                                    </div>
                                </div>
                            </div>
                        </article>
            
                        <!-- segunda Tarjeta del carrito -->
                        <article class="card">
                            <img class=productos src="/img/camiseta.jpg" alt="Camiseta">
                            <div class="descripcion-producto">
                                <div>
                                    <h2 class="titulo-tarjeta">Titulo del producto</h2>
                                    <h3 class="subtitulo-tarjeta">descripcion del producto</h3>
                                </div>
                                <div class="etiqueta-precio">
                                    <div>
                                        <p>$Precio x</p>
                                    </div>
                                    <select name="cantidad-producto" id="cantProd">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                    <div>
                                        <p>= $Total</p>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <div class="boton-escritorio">
                            <p><i class="fa-solid fa-angle-down"></i></p>
                        </div>
                    </div>
                    <div class="contenedor-dos">
                        <div class="contenedor-envio">
                            <div class="envio">
                                <div><p>ENVIO</p></div>
                                <div class="opcion-envio">
                                    <div>
                                        <p>
                                            <label name="pais">Pais</label>
                                        </p>
                                    </div>
                                        <select for="pais" id="pais">
                                            <option value="" selected></option>
                                            <option value="arg">Argentina</option>
                                            <option value="bra">Brasil</option>
                                            <option value="par">Paraguay</option>
                                            <option value="per">Peru</option>
                                            <option value="chi">Chile</option>
                                        </select>
                                </div>
                                <div class="opcion-envio">
                                    <div>
                                        <p>
                                            <label for="provincia">Provincia</label>
                                        </p>
                                    </div>
                                    <select name="provincia" id="provincia">
                                        <option value="" selected></option>
                                        <option value="BsAs">Buenos Aires</option>
                                        <option value="Mis">Misiones</option>
                                        <option value="Cor">Cordoba</option>
                                        <option value="Chu">Chubut</option>
                                        <option value="LaPa">La Pampa</option>
                                    </select>
                                </div>
                                <div class="opcion-envio">
                                    <div>
                                        <p>
                                            <label for="codigo">Codigo Postal</label>
                                        </p>
                                    </div>
                                    <select name="codigo" id="codigo">
                                        <option value="" selected></option>
                                        <option value="1607">1607</option>
                                        <option value="1709">1709</option>
                                        <option value="1514">1514</option>
                                        <option value="1424">1424</option>
                                        <option value="8267">8267</option>
                                    </select>
                                </div>
                            </div>
                            <div class="contenedor-boton-cotizacion">
                                <div class="boton-cotizacion">
                                    <button class="p-cotizacion"><strong>Obtener Cotizacion</strong></button>
                                </div>
                            </div>
                        </div>
                        <div class="contenedor-envio">
                            <div class="envio">
                                <div><p>TOTAL DE COMPRA</p></div>
                                <div class="opcion-envio">
                                    <div>
                                        <p>Subtotal: $</p>
                                    </div>
                                </div>
                                <div class="opcion-envio">
                                    <div>
                                        <p>Envio: $</p>
                                    </div>
                                </div>
                                <div class="opcion-envio">
                                    <div>
                                        <p>Total: $</p>
                                    </div>
                                </div>
                            </div>
                            <div class="contenedor-boton-cotizacion">
                                <div class="boton-cotizacion">
                                    <button class="p-cotizacion"><strong>Actualizar Carrito</strong></button>
                                </div>
                                <div class="boton-cotizacion">
                                    <button class="p-cotizacion"><strong>Finalizar Compra</strong></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </main>

    <%- include('./partials/footer.ejs'); %>

</body>
</html>