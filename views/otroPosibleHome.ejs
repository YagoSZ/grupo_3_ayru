<!DOCTYPE html>
<html lang="en">


    <%- include('./partials/head.ejs'); %>

<body>
    <% if (logged == undefined) { %>
        <%- include('./partials/header.ejs'); %>
    <% } else{%>
        <%- include('./partials/headerUsuario.ejs'); %>
    <% } %>
<main>
    <div class="main-main">
        <div class="slideshow-container">
            <!-- Slideshow container -->
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
              <div class="numbertext">1 / 3</div>
              <img src="../img/s22blanco.png" class="img-carrusel">
              <div class="text">Samsung Galaxy</div>
              <div class="text1">S22 Ultra</div>
              <div class="contenedor-descripcion-foto">
                <button class="boton-comprar"><p>Comprar</p><i class="fa-solid fa-square-arrow-up-right"></i></button>
                <a href="/detalle/2">Mas informacion</a>
            </div>
            </div>
          
            <div class="mySlides fade">
              <div class="numbertext">2 / 3</div>
              <img src="/img/iphone13pro-azul.jpg" class="img-carrusel">
              <div class="text">Iphone 13</div>
              <div class="text1">Pro Max</div>
              <div class="contenedor-descripcion-foto">
                <button class="boton-comprar"><p>Comprar</p><i class="fa-solid fa-square-arrow-up-right"></i></button>
                <a href="/detalle/3">Mas informacion</a>
            </div>
            </div>
          
            <div class="mySlides fade">
              <div class="numbertext">3 / 3</div>
              <img src="/img/s21fe-dorado.jpg" class="img-carrusel">
              <div class="text">Samsung Galaxy</div>
              <div class="text1">S21 Dorado</div>
              <div class="contenedor-descripcion-foto">
                <button class="boton-comprar"><p>Comprar</p><i class="fa-solid fa-square-arrow-up-right"></i></button>
                <a href="/detalle/1">Mas informacion</a>
            </div>
            </div>
          
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
          </div>
          <br>
          
          <!-- The dots/circles -->
          <div class="dots">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
          </div>
        <!-- <section class="slider"-->

    <div class="contenedor-destacados">

            <h1 class="encabezado-secundario">Destacados del mes</h1>
    
        <div class="destacados">
    
            <% let destacados = productos.filter(product =>  product.id < 4) %>



            <% destacados.forEach(producto => { %>

                <div class="contenedor-imagen">
                    <img src="<%= producto.imagenPrincipal %> " alt="Samsung S21" class="imagen-destacada">
                    <div class="descripcion-destacado">
                        <h3><%= producto.nombre %> </h3>
                        <p>$<%= producto.precio %> </p>
                        <a href="/detalle/<%= producto.id %> "><button class="boton" type="submit">Conoce más</button></a>
                    </div>
                </div>
    
            <%  }); %> 
